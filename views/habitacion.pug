extends layout

block head
  style.
    .btn-editar {
      background-color: #1976d2;
      color: white;
      padding: 5px 12px;
      border-radius: 5px;
      text-decoration: none;
      margin-right: 8px;
      font-weight: 600;
      transition: background-color 0.3s ease;
    }

    .btn-editar:hover {
      background-color: #115293;
    }

    .btn-eliminar {
      background-color: #d32f2f;
      color: white;
      padding: 5px 12px;
      border-radius: 5px;
      text-decoration: none;
      font-weight: 600;
      transition: background-color 0.3s ease;
    }

    .btn-eliminar:hover {
      background-color: #9a2222;
    }

    th:last-child, td:last-child {
      text-align: center !important;
    }

    td:last-child > a {
      margin: 0 4px;
      display: inline-block;
    }

block content
  h1 Gestión de Habitaciones
  p Acá podrás ver el estado de las habitaciones y sus camas.

  link(rel='stylesheet', href='https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css')

  table#tablaHabitaciones.display
    thead
      tr
        th N° Habitación
        th Ala
        th Camas
        th Acciones
    tbody
      each habitacion in habitaciones
        tr
          td= habitacion.nro_habitacion
          td= habitacion.Ala ? habitacion.Ala.nombre_ala : 'Sin Ala'
          td
            ul
              each cama in habitacion.Camas.slice(0, 2)
                li Cama #{cama.id_cama} - #{cama.estado ? 'Disponible' : 'Ocupada'}
          td
            a(href=`/habitaciones/editar/${habitacion.id_habitacion}`, class='btn-editar') Modificar
            a(href=`/habitaciones/eliminar/${habitacion.id_habitacion}`, class='btn-eliminar', onclick='return confirm("¿Estás seguro de eliminar esta habitación?");') Eliminar

  // Scripts
  script(src='https://code.jquery.com/jquery-3.6.0.min.js')
  script(src='https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js')
  script.
    $(document).ready(function () {
      $('#tablaHabitaciones').DataTable({
        responsive: true,
        language: {
          url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
        }
      });
    });
