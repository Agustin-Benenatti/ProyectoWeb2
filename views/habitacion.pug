extends layout

block head
  style.
    h1 {
      text-align: center;
      margin-top: 20px;
      margin-bottom: 30px;
      font-size: 2.2rem;
      font-weight: bold;
      color: #2c3e50;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: auto;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 12px;
      text-align: center !important;
      vertical-align: middle;
      border: 1px solid #ddd;
    }

    thead th {
      background-color: #1976d2;
      color: white;
      font-weight: bold;
    }

    tbody tr:hover {
      background-color: #f1f1f1;
    }

    .btn-editar {
      background-color: #1976d2;
      color: white;
      padding: 5px 12px;
      border-radius: 5px;
      text-decoration: none;
      margin-right: 8px;
      font-weight: 600;
      transition: background-color 0.3s ease;
    }

    .btn-editar:hover {
      background-color: #115293;
    }

    .btn-eliminar {
      background-color: #d32f2f;
      color: white;
      padding: 5px 12px;
      border-radius: 5px;
      text-decoration: none;
      font-weight: 600;
      transition: background-color 0.3s ease;
    }

    .btn-eliminar:hover {
      background-color: #9a2222;
    }

    td:last-child > a {
      margin: 0 4px;
      display: inline-block;
    }

  // Bootstrap solo para cards de cama
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')

block content
  h1 Gestión de Habitaciones
  

  link(rel='stylesheet', href='https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css')

  table#tablaHabitaciones.display
    thead
      tr
        th N° Habitación
        th Ala
        th Camas
        th Acciones
    tbody
      each habitacion in habitaciones
        tr
          td= habitacion.nro_habitacion
          td= habitacion.Ala ? habitacion.Ala.nombre_ala : 'Sin Ala'
          td
            .d-flex.flex-wrap.gap-2.justify-content-center
              each cama in habitacion.Camas.slice(0, 2)
                .card.shadow-sm(style="width: 8rem; min-height: 60px;")
                  .card-body.p-2
                    small.text-muted Cama #{cama.id_cama}
                    br
                    if cama.estado
                      span.badge.bg-success Disponible
                    else
                      span.badge.bg-danger Ocupada
          td
            a(href=`/habitaciones/editar/${habitacion.id_habitacion}`, class='btn-editar') Modificar
            a(href=`/habitaciones/eliminar/${habitacion.id_habitacion}`, class='btn-eliminar', onclick='return confirm("¿Estás seguro de eliminar esta habitación?");') Eliminar

  // Scripts
  script(src='https://code.jquery.com/jquery-3.6.0.min.js')
  script(src='https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js')
  script.
    $(document).ready(function () {
      $('#tablaHabitaciones').DataTable({
        responsive: true,
        language: {
          url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
        }
      });
    });
