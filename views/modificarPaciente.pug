extends layout 

block head
  style.
    form {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      border: 2px solid #1976d2;
      border-radius: 8px;
      background-color: #f4f6f9;
    }

    h1 {
      text-align: center;
      color: #1976d2;
      margin-bottom: 20px;
      font-size: 24px;
    }

    .form-row {
      display: flex;
      justify-content: space-between;
      gap: 20px;
      margin-bottom: 15px;
    }

    .campo {
      flex: 1;
    }

    label {
      display: block;
      font-size: 14px;
      margin-bottom: 5px;
      color: #333;
    }

    input[type="text"],
    input[type="number"],
    input[type="date"],
    select {
      width: 100%;
      padding: 8px;
      font-size: 14px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-sizing: border-box;
    }

    input:focus,
    select:focus {
      border-color: #1976d2;
      outline: none;
    }

    button[type="submit"] {
      padding: 10px 20px;
      background-color: #1976d2;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
    }

  
block content
  - const p = paciente || {}

  div
    h1= paciente ? 'Editar Paciente' : 'Nuevo Paciente'

    form(action=paciente ? `/pacientes/editar/${p.id_paciente}` : "/pacientes/cargar", method="POST")
      .form-row
        .campo
          label(for="nombre") Nombre:
          input(type="text" name="nombre" placeholder="Ej: Juancito" required value=p.nombre || '')
        .campo
          label(for="apellido") Apellido:
          input(type="text" name="apellido" placeholder="Ej: Perez" required value=p.apellido || '')

      .form-row
        .campo
          label(for="sexo") Sexo 
          select(name="sexo" required)
            option(value="" disabled selected)= p.sexo ? '' : '----Seleccionar----'
            option(value="Masculino" selected=p.sexo=="Masculino") Masculino
            option(value="Femenino" selected=p.sexo=="Femenino") Femenino
            option(value="Otro" selected=p.sexo=="Otro") Otro
        .campo
          label(for="dni") DNI: 
          input(type="text" name="dni" placeholder='Ej: 44.123.789' required value=p.dni || '')

      .form-row
        .campo
          label(for="peso") Peso: 
          input(type="number" name="peso" placeholder="Ej: 80kg" required min="0" value=p.peso || '')
        .campo
          label(for="altura") Altura: 
          input(type="number" name="altura" placeholder="Ej: 1.80" required min="0" step="0.01" value=p.altura || '')

      .form-row
        .campo
          label(for="Obra_Social") Obra Social
          select(name="id_obra_social")
            option(value="" disabled selected)= p.id_obra_social ? 'Seleccionar' : 'No tiene'
            option(value="") No tiene
            each obra in obrasSociales  
              option(
                value=obra.id_obra_social 
                selected=p.id_obra_social == obra.id_obra_social
              )= obra.nombre
            
        .campo
          label(for="fechaNacimiento") Fecha de Nacimiento: 
          input(
            type="date" 
            name="fecha_nacimiento" 
            required 
            value=p.fecha_nacimiento ? p.fecha_nacimiento.toISOString().split('T')[0] : ''
          )

      .form-row
        .campo
          label(for="direccion") Dirección: 
          input(type="text" name="direccion" placeholder="Ej: Calle falsa 123" required value=p.direccion || '')
        .campo
          label(for="telefono") Teléfono: 
          input(type="text" name="telefono" placeholder="Ej: 2664-020100" value=p.telefono || '')
        .campo
          label(for="estado") Estado 
          select(name="estado" required)
            option(value="true" selected=p.estado===true) Activo 
            option(value="false" selected=p.estado===false) Inactivo

      div(style="text-align: center; margin-top: 20px;")
        button(type="submit")= paciente ? 'Actualizar Paciente' : 'Guardar Paciente'
